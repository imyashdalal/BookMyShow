# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/movie-booking-app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=7d

# Client Configuration
CLIENT_URL=http://localhost:5173

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Payment Gateway - Cashfree (currently in use)
CASHFREE_CLIENT_ID=your-cashfree-client-id
CASHFREE_CLIENT_SECRET=your-cashfree-client-secret

# Payment Gateway - Razorpay (legacy/alternative)
RAZORPAY_API_KEY=your-razorpay-api-key
RAZORPAY_API_SECRET=your-razorpay-api-secret

# Security Settings
# Password hashing uses bcrypt with 12 salt rounds (handled in code)

# Rate Limiting (optional overrides in security.config.js)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# HTTPS (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
